generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Branch {
  id        Int       @id @default(autoincrement())
  name      String
  location  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  manager   Manager?
  classes   Class[]
}

model Manager {
  id        Int       @id @default(autoincrement())
  name      String
  branchId  Int       @unique
  branch    Branch?   @relation(fields: [branchId], references: [id])
}

model Class {
  id        Int       @id @default(autoincrement())
  name      String
  startAt   DateTime
  endAt     DateTime
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  branchId  Int
  branch    Branch   @relation(fields: [branchId], references: [id])
}
